#! /bin/sh

# $Id$

set -x

if [ -e Makefile ]
then
  make distclean
fi
aclocal -I build --output=build/aclocal.m4
libtoolize --copy --force
# cp -f ~/cvs/config/config.guess ~/cvs/config/config.sub build/
autoheader
automake --add-missing --copy --verbose
autoreconf --localdir=build --gnu --verbose

